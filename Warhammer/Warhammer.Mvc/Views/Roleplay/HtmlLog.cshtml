@using Warhammer.Mvc.Models
@using SessionTranscriptViewModel = Warhammer.Mvc.Models.SessionTranscriptViewModel
@model SessionTranscriptViewModel

@{
    ViewBag.Title = "HtmlLog";
}


@section head
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/RoleplayCss/SessionLog.css")" />
}

<div class="content-wrapper">
    <div class="banner-content">
        <div class="header-block">
            <h1>@Model.FullName</h1>
        </div>
    </div>
    <div class="main-content">
        <div class="content-block">
            <h2>@Model.ShortName</h2>
            <div id="sessionLogContainer">
                @Html.Raw(Model.Transcript)
            </div>
        </div>
    </div>
    <div class="side-bar">
        <div class="content-block">
            @Html.ActionLink("Go Back To Session Page", "Index", "Page", new {id = Model.Id}, new {@class = "btn btn-success btn-block"})
        </div>        
        <hr />
        <div class="content-block">
            @Html.Action("Index", "Comment", new { id = Model.Id })
        </div>        
    </div>
</div>

