@model Warhammer.Core.Entities.PersonAttribute
    <tr>
        <td>
            @Html.HiddenFor(a => a.Id)
            @Html.HiddenFor(a => a.PersonId)
            @Html.EnumDropDownListFor(m => m.AttributeType, new { @class = "form-control" })
        </td>
        <td>@Html.EditorFor(m => m.CurrentValue, new { @class = "form-control" })</td>
        <td>@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })</td>
        <td>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </td>
        <td>@Html.CheckBoxFor(m => Model.IsPrivate, new { data_toggle = "toggle", data_on = "Private", data_off = "Public", data_offstyle = "success", data_onstyle = "info" })</td>
        <td>@Html.CheckBoxFor(m => Model.Remove, new { data_toggle = "toggle", data_on = "Remove", data_off = "Keep", data_offstyle = "success", data_onstyle = "danger" })</td>
    </tr>

