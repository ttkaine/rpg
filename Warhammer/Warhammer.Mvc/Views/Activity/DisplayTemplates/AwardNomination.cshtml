@model Warhammer.Core.Entities.AwardNomination
<tr>
    <td>
        <a href="@Url.Action("Index", "Page", new {id = Model.PersonId})"><img src="@Url.Action("Image", "Page", new {id = Model.PersonId}, null)" title="@Model.Person.FullName" alt="Picture of @Model.Person.FullName" class="mini-profile-image" /></a>
    </td>
    <td>
        <a href="@Url.Action("Trophy", "Home", new { id = Model.Trophy.Id})"><img src="@Url.Action("TrophyImage", "Home", new {id = Model.Trophy.Id}, null)" title="@Model.Trophy.Name @Model.NominationReason" alt="Picture of @Model.Trophy.Name" class="mini-trophy-image" /></a>
    </td>
    <td class="name">
       @Model.Player.DisplayName nominated @Model.Person.FullName for an award! <br/> @Model.Trophy.Name @Model.NominationReason
    </td>
</tr>
<tr>
    <td colspan="3">
        <span class="note">
            Nominated @Model.NominatedDate.Value.ToLongDateString() : @Model.NominatedDate.Value.ToShortTimeString()
        </span>
    </td>
</tr>

