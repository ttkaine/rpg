@model Warhammer.Core.Entities.Award
<tr>
    <td>
        @Html.Action("PageImage", "Image")
    </td>
    <td>
        <a href="@Url.Action("Trophy", "Home", new { id = Model.Trophy.Id})"><img src="@Url.Action("TrophyImage", "Home", new {id = Model.Trophy.Id}, null)" title="@Model.Trophy.Name @Model.Reason" alt="Picture of @Model.Trophy.Name" class="mini-trophy-image" /></a>
</td>
    <td class="name">
        @Model.Trophy.Name @Model.Reason
    </td>
</tr>
<tr>
    <td colspan="3"><span class="note">Awarded @Model.AwardedOn.ToLongDateString() : @Model.AwardedOn.ToShortTimeString()</span></td>
</tr>
