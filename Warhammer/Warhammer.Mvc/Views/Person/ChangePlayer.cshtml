@model Warhammer.Mvc.Models.ChangePersonPlayerViewModel

@{
    ViewBag.Title = "Change Player for " +  Model.PersonName;
}
<div class="content-wrapper">

    <div class="main-content">
        <div class="content-block">


                <h2> @Html.ActionLink(Model.PersonName, "Index", "Page", new { id = Model.PersonId }, null)</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(p => p.PersonId)
         
            

            <p>Pick a player</p>
            @Html.DropDownListFor(m => m.PlayerId, new SelectList(Model.AvailablePlayers, "Id", "DisplayName", Model.PlayerId), " -NPC - ")


            <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Set Player" class="btn btn-warning" />
                            </div>
                        </div>
                    </div>
                }
            
            


        </div>
    </div>

    <div class="side-bar">
        <div class="content-block">
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
