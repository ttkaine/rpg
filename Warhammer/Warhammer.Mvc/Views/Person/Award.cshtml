@model Warhammer.Core.Entities.Award
<tr>
    <td>
        <img src="@Url.Action("TrophyImage", "Home", new { id = Model.Trophy.Id }, null)" title="@Model.Trophy.Name @Model.Reason" alt="Picture of @Model.Trophy.Name" class="mini-trophy-image" />
    </td>
    <td class="name">
        @Model.Trophy.Name @Model.Reason
        <br />
        <span class="note">Awarded @Model.AwardedOn.ToLongDateString()</span>
    </td>
</tr>
