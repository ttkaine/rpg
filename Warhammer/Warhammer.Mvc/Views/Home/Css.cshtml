
@using Warhammer.Core.Entities
@model SiteTheme

@switch (Model)
{
    case SiteTheme.Default:
        @Styles.Render("~/Content/default")
        break;
    case SiteTheme.Dark:
        @Styles.Render("~/Content/dark")
        break;
    case SiteTheme.LightGlass:
        @Styles.Render("~/Content/lightglass")
        break;
    case SiteTheme.DarkGlass:
        @Styles.Render("~/Content/darkglass")
        break;
    default:
        throw new ArgumentOutOfRangeException();
}
@Html.Action("OverrideCss")