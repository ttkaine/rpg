@model Warhammer.Core.Entities.PriceListItem

@if (Model.PriceInPence.HasValue && Model.PriceInPence > 0)
{
    <tr>
        <td class="name">@Model.Name</td>
        <td style="white-space: nowrap;">@Html.Raw(Model.DisplayPrice)</td>
        <td style="white-space: nowrap;">@Html.Raw(String.Format("{0:n}", @Model.PriceInPence))</td>
        <td class="description">
            @Model.Description
            <br />
            <span class="note">@Model.Breadcrumb</span>
        </td>
    </tr>
}