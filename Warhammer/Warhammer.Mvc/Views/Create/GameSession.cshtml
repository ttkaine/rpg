@model Warhammer.Mvc.Models.CreateSessionViewModel

@{
    ViewBag.Title = "Add a Session";
}
<div class="content-wrapper">

    <div class="main-content">
        <div class="content-block">
            <h2>Session Creation</h2>
            <p>Just put in the basics here to create the session. You can add things and write stuff in the next page...</p>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Name the session with its number", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Session.ShortName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Session.ShortName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("When did this session happen (so we can show them in order) Format: YYYY/MM/DD", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Session.DateTime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Session.DateTime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Give it a fancy title", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Session.FullName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Session.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Give a quick description, this can be edited and extended later", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.Session.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Session.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    @if (Model.LinkPages.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <td colspan="3">Would you like to link the following pages?</td>
                            </tr>
                            </thead>
                            <tbody>
                            @Html.EditorFor(m => m.LinkPages)
                            </tbody>

                        </table>
                    }
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="side-bar">
        <div class="content-block">
            <p>Game Sessions</p>
            <p>To link shizzle together that happened in a particualr session... we um.. have sessions!</p>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
